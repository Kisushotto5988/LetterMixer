<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <!-- Inside border/shadow -->
            <item android:top="5dp" android:left="5dp" android:right="5dp" android:bottom="0dp">
                <shape android:shape="rectangle">
                    <gradient android:angle="90" android:startColor="@color/button_shadow" android:endColor="#eee" />
                    <corners android:radius="5dp"></corners>
                </shape>
            </item>

            <item android:top="6dp" android:left="6dp" android:right="6dp" android:bottom="6dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/btn_submit" />
                    <corners android:radius="5dp"></corners>
                </shape>
            </item>

            <item android:width="35dp" android:height="35dp" android:gravity="center">
                <bitmap android:src="@drawable/gameplay_icon_submit" android:gravity="fill"></bitmap>
            </item>

        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <!-- Inside border/shadow -->
            <item android:top="6dp" android:left="6dp" android:right="6dp" android:bottom="6dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/btn_submit" />
                    <corners android:radius="5dp"></corners>
                </shape>
            </item>

            <item android:width="35dp" android:height="35dp" android:gravity="center">
                <bitmap android:src="@drawable/gameplay_icon_submit" android:gravity="fill"></bitmap>
            </item>
        </layer-list>
    </item>
</selector>
