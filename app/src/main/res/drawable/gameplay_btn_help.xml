<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Inside border/shadow -->
    <item android:top="5dp" android:left="5dp" android:right="5dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:startColor="#dcdcdc" android:endColor="#eee" />
            <corners android:radius="5dp"></corners>
        </shape>
    </item>

    <!-- Main gameplay_btn_ans -->
    <item android:top="6dp" android:left="6dp" android:right="6dp" android:bottom="6dp">
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" />
            <corners android:radius="5dp"></corners>
        </shape>
    </item>

    <item android:width="40dp" android:height="40dp" android:gravity="center">
        <bitmap android:src="@drawable/gameplay_icon_help" android:gravity="fill"></bitmap>
    </item>

</layer-list>